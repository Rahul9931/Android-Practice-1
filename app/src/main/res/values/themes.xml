    <!-- Add these styles to your styles.xml file -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- SearchView box style -->
        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
        <!-- SearchView text style -->
        <item name="android:textColor">#FF000000</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background and border -->
        <item name="android:background">@drawable/search_view_background</item>
        <!-- Remove underline -->
        <item name="queryBackground">@null</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#80000000</item>
        <!-- Text color -->
        <item name="android:textColor">#FF000000</item>
        <!-- Cursor color -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorPrimary">#FF000000</item>
    </style>
