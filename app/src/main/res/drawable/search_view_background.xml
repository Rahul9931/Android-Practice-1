<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- White background -->
    <solid android:color="#FFFFFF" />
    <!-- Rounded corners -->
    <corners android:radius="12dp" />
    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />
    <!-- Padding -->
    <padding
        android:left="4dp"
        android:top="8dp"
        android:right="4dp"
        android:bottom="8dp" />
</shape>